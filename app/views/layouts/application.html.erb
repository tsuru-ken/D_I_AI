<!DOCTYPE html>
<html>

  <head>
    <title>DIAI</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if user_signed_in? %>
      <p>
        <%= current_user.name %>
        <small>でログイン中</small>
      </p>
    <% end %>
    <div>
      <ul>
        <li>
          <%= link_to "トップ", root_path,
            class: "nav-link" %>
        </li>
        <li>
          <%= link_to "管理画面", rails_admin_path,
          class: "nav-link" if current_user&.admin? %>
        </li>
        <li>
          <%= link_to "AI選択", users_path,
          class: "nav-link" %>
        </li>
        <li>
          <%= link_to "AI会社検索", partners_path,
          class: "nav-link" %>
        </li>
      <% if user_signed_in? %>
        <li>
          <%= link_to "マイページ", user_path(current_user),
          class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_user_session_path,
          class: "nav-link", method: :delete %>
        </li>
      <% else %>
        <% if user_signed_in? %>
  <li class="nav-item">
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "ゲスト管理者ログイン", users_guest_admin_sign_in_path, method: :post, class: "nav-link" %>
  </li>
<% end %>
      <% end %>


      <% if notice %>
        <p class="alert alert-notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
      <% end %>

    

    <%= yield %>
    <footer class="my-auto py-2 bg-info text-center">
      <small>© 2023, Tsuruken.</small>
    </footer>
  </body>
</html>
