
<!DOCTYPE html>

<html>
  <head>
    <title>DIAI</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div>
  <ul style="display: flex; justify-content: flex-end; font-weight: bold;">
    <li style="display: inline-block;">
      <%= link_to "トップ", root_path, style: "margin-right: 10px;" %>
    <% if current_user&.admin? %>
      <li style="display: inline-block;">
        <%= link_to "管理画面", rails_admin_path, style: "margin-right: 10px;" %>
      </li>
    <% end %>
    <li style="display: inline-block;">
      <%= link_to "AI選択", users_path, style: "margin-right: 10px;" %>
    </li>
    <li style="display: inline-block;">
      <%= link_to "AI会社検索", partners_path, style: "margin-right: 10px;" %>
    </li>
    <% if current_user&.guest? %>
      <%# ゲストログインとゲスト管理者ログインのリンクを非表示にする %>
    <% else %>
      <li style="display: inline-block;">
        <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, style: "margin-right: 10px;" %>
      </li>
      <% if %>
        <li style="display: inline-block;">
          <%= link_to "ゲスト管理者ログイン", users_guest_admin_sign_in_path, method: :post, style: "margin-right: 10px;" %>
        </li>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <li style="display: inline-block;">
        <%= link_to "マイページ", user_path(current_user), style: "margin-right: 10px;" %>
      </li>
      <li style="display: inline-block;">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, style: "margin-right: 10px;" %>
      </li>
    <% else %>
      <li style="display: inline-block;">
        <%= link_to "新規登録", new_user_registration_path, style: "margin-right: 10px;" %>
      </li>
      <li style="display: inline-block;">
        <%= link_to "ログイン", new_user_session_path, style: "margin-right: 10px;" %>
      </li>
    <% end %>
  </ul>
</div>

    <div style="display: flex; justify-content: center;">
    <div class="texts-wrapper">
      <div class="contents-title text-center">
      <%= image_tag "rogo.png" , style: "width: 65%"%>
      </div>
      </div>
    </div>
    <% if notice %>
      <p><%= notice %></p>
    <% end %>
    <% if alert %>
      <p><%= alert %></p>
    <% end %>
    <%= yield %>
    <footer style="background-color: rgb(2, 155, 197); text-align: center; padding: 10px;">
      <small>© 2023, Tsuruken.</small>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>

<style>
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }

  footer {
    margin-top: auto;
  }
</style>
